{
    "pluginAlias": "RoborockVacuumPlatform",
    "pluginType": "platform",
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "title": "Email",
          "type": "string",
          "format": "email",
          "description": "Roborock account email"
        },
        "password": {
          "title": "Password",
          "type": "string",
          "placeholder": "Password",
          "description": "Roborock account password"
        },
        "skipDevices": {
          "title": "Skip Device",
          "type": "string",
          "description": "Device ID to skip"
        },
        "baseURL": {
          "type": "string",
          "default": "usiot.roborock.com",
          "description": "Roborock API endpoint USA: usiot.roborock.com, Europe: euiot.roborock.com"
        }
        ,
        "debugMode": {
          "title": "Debug Mode",
          "description": "When enabled, debug messages will be written to the log.",
          "type": "boolean",
          "default": false
        }
      },
      "required": ["email", "password"]
    }
  }